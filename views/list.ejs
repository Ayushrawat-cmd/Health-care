    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        <% newListItems.forEach(function(i){ %>
            <form action="/tracker/<%= schema %>/delete" method="POST">
            <div class="item">
            
                <input type="checkbox" name="Done" value="<%= i._id %>" onChange="this.form.submit()">
                <p><%= i.name %></p>
            
        </div>
        <input type="hidden" name="NameList" value="<%= listTitle %>">
        </form>
        <% }); %>
        <form class="item" action="/tracker/<%= schema %>" method="POST">
            <input type="text" name="Items" placeholder="Enter New item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
    
        </form>    
    </div>

    
</body>
